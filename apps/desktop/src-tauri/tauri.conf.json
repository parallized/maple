{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Maple",
  "version": "0.1.0",
  "identifier": "com.maple.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev:web",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build:web",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Maple 0.1.0",
        "width": 1280,
        "height": 860,
        "minWidth": 980,
        "minHeight": 680,
        "resizable": true,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"]
  }
}

{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@maple/kanban-core": ["packages/kanban-core/src/index.ts"],
      "@maple/agent-runtime": ["packages/agent-runtime/src/index.ts"],
      "@maple/worker-skills": ["packages/worker-skills/src/index.ts"],
      "@maple/mcp-server": ["packages/maple-mcp-server/src/index.ts"]
    },
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
